rqcfilter2.sh jni=t threads=16 cf=t jni=t in=raw_interleaved.fastq.gz path=filtered rna=f trimfragadapter=t qtrim=r trimq=0 maxns=3 maq=3 minlen=51 mlf=0.33 phix=t removehuman=t removedog=t removecat=t removemouse=t khist=t removemicrobes=t sketch kapa=t clumpify=t barcodefilter=f trimpolyg=5 usejni=frqcfilterdata=/refdata//RQCFilterData
